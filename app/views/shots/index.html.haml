.container
	.row
		.span12
			-if params[:tag]
				.page-header.double-padding-top
					%h3
						Tags /
						= @tag
			-else
				.page-header.double-padding-top
					%h3.no-margin-bottom
						Popular Tips
			-@shots.in_groups_of(4,false) do |s|
				-s.each do |c| 
					= render :partial => 'shared/shot_thumb', :locals => {:c => c}
			= will_paginate @shots 