.container
	.row
		.span12
			-if params[:tag]
				.page-header.double-padding-top
					%h3
						Tags /
						= @tag
			-else
				= render :partial => 'shot_nav', :locals => {:c => @shots}
			-@shots.in_groups_of(4,false) do |s|
				-s.each do |c| 
					= render :partial => 'shared/shot_thumb', :locals => {:c => c}
			= will_paginate @shots 
			-if @shots.count == 0
				%h2.muted
					You're not following anyone yet!
					= link_to 'Browse Popular Tips', shots_path